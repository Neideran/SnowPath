<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/main_bg"
        android:layout_height="match_parent"
        tools:context=".View.Fragments.RegistrationFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/menu_search"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/l_layout_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/reg_enter_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="@string/enter_user_info"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:hint="@string/user_name"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:autofillHints="name">
                    </EditText>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="phone"
                        android:hint="@string/user_phone"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:autofillHints="phone">
                    </EditText>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:hint="@string/user_email"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:autofillHints="emailAddress">
                    </EditText>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/editTextAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPostalAddress"
                        android:hint="@string/user_address"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:autofillHints="postalAddress">
                    </EditText>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_reg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#e1ecf7"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="57dp"
            android:layout_marginEnd="1dp"
            app:cardCornerRadius="5dp"
            >

            <TextView
                android:id="@+id/text_reg_price_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l_layout_buttons"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/item_price"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/l_layout_reg_price1"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/reg_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/one_two_three"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#000"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/RUB"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#000"
                    android:textSize="20sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_reg_delivery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l_layout_buttons"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/delivery_price"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/l_layout_reg_delivery_price1"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_temp_item_name"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reg_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:paddingTop="10dp"
                    android:text="@string/one_two_three"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/RUB"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#000"
                    android:textSize="20sp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/text_total_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l_layout_buttons"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="95dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="@string/total_price"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/l_layout_total_price1"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reg_price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/one_two_three"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#000"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/RUB"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#000"
                    android:textSize="20sp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_go_to_exec"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/functional_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="12dp"
                    android:text="@string/execute_order"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>



        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
