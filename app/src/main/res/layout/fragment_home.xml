<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.HomeFragment"
    android:background="@color/main_bg">

    <HorizontalScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/tag_scroll_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_tag_catalog"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/functional_item"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/noto_sans"

                android:text="@string/catalog"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:cornerRadius="4dp"
                app:icon="@drawable/tag_catalog"
                app:iconGravity="start"
                app:iconPadding="5dp"
                app:iconSize="25dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/button_tag_ski"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/functional_item"
                android:clickable="true"
                android:focusable="true"

                android:fontFamily="@font/noto_sans"

                android:text="@string/mount_ski_multiple"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:cornerRadius="4dp"

                app:icon="@drawable/tag_ski"
                app:iconGravity="start"
                app:iconPadding="5dp"
                app:iconSize="25dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/button_tag_snowboards"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/functional_item"

                android:fontFamily="@font/noto_sans"
                android:text="@string/snowboard_single"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:cornerRadius="4dp"

                app:icon="@drawable/tag_snowboards"
                app:iconGravity="start"
                app:iconPadding="5dp"
                app:iconSize="25dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/button_tag_clothes"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/functional_item"
                android:clickable="true"
                android:focusable="true"

                android:fontFamily="@font/noto_sans"
                android:text="@string/clothes"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:cornerRadius="4dp"

                app:icon="@drawable/tag_clothes"
                app:iconGravity="start"
                app:iconPadding="5dp"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/button_tag_helmets_masks"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/functional_item"
                android:clickable="true"
                android:focusable="true"

                android:fontFamily="@font/noto_sans"
                android:text="@string/helmets_masks"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:cornerRadius="4dp"

                app:icon="@drawable/tag_helmets_masks"
                app:iconGravity="start"
                app:iconPadding="5dp"
                app:iconSize="25dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/button_tag_accessories"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/functional_item"
                android:clickable="true"
                android:focusable="true"

                android:fontFamily="@font/noto_sans"
                android:text="@string/accessory_multiple"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:cornerRadius="4dp"
                app:icon="@drawable/tag_accessories"
                app:iconGravity="start"
                app:iconPadding="5dp"
                app:iconSize="25dp"
                app:iconTint="@color/black" />

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/scroll_ads"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ads1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_bg"
                android:contentDescription="@string/item" />


            <ImageButton
                android:id="@+id/ads2"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_bg"
                android:contentDescription="@string/item" />

            <ImageButton
                android:id="@+id/ads3"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_bg"
                android:contentDescription="@string/item" />

            <ImageButton
                android:id="@+id/ads4"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_bg"
                android:contentDescription="@string/item" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>